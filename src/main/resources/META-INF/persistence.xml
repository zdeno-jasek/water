<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
	version="3.1">
	<persistence-unit name="water">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>sk.zdeno.water.domain.waterconnection.WaterConnection</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>

        <mapping-file>META-INF/orm.xml</mapping-file>
        <properties>
            <!-- Database connection properties -->
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:water;DB_CLOSE_DELAY=-1;"/>
            <property name="javax.persistence.jdbc.userJpa" value="sa"/>
            <property name="javax.persistence.jdbc.password" value="sa"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>

            <!-- Hibernate specific properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/> <!-- Schema creation strategy -->
            <property name="hibernate.show_sql" value="true"/> <!-- Show SQL queries in the console -->
        </properties>

	</persistence-unit>
</persistence>
